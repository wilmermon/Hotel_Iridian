{% set nombreCongreso = '' %}
{% set descCongreso = '' %}
{% set ubicacionCongreso = '' %}
{% set lugarCongreso = '' %}
{% set fechaCongreso = '' %}
{% set mes = '' %}
{% set dia = '' %}
{% set mesT = '' %}
{% set anio = '' %}
{% set titulo1Congresos = '' %}
{% set titulo2Congresos = '' %}
{% set titulo1Testimonio = '' %}
{% set titulo2Testimonio = '' %}
{% set idHomeGral = '' %}
{% set imagenFondo = '' %}
{% set page = '' %}

{% for homes in home %}
        {% set page = homes.page %}
        {% set imagenFondo = homes.imgLogo %}
        {% set nombreCongreso = homes.NombreCongreso %}
        {% set descCongreso = homes.DescripcionCongreso %}
        {% set ubicacionCongreso = homes.UbicacionCongreso %}
        {% set lugarCongreso = homes.LugarEncuentroCongreso %}
        {% set fechaCongreso = homes.FechaCongreso %}
        {% set mes = fechaCongreso|slice(5,2) %}
        {% set dia = fechaCongreso|slice(8,2) %}
        {% set anio = fechaCongreso|slice(0,4) %}
        {% if mes == 01 %}
            {% set mesT = 'Enero' %}
        {% elseif mes == 02 %}
            {% set mesT = 'Febrero' %}
        {% elseif mes == 03  %}
            {% set mesT = 'Marzo' %}    
        {% elseif mes == 04  %}
            {% set mesT = 'Abril' %}    
        {% elseif mes == 05  %}
            {% set mesT = 'Mayo' %}    
        {% elseif mes == 06  %}
            {% set mesT = 'Junio' %}    
        {% elseif mes == 07  %}
            {% set mesT = 'Julio' %}    
        {% elseif mes == 08  %}
            {% set mesT = 'Agosto' %}    
        {% elseif mes == 09  %}
            {% set mesT = 'Septiembre' %}    
        {% elseif mes == 10  %}
            {% set mesT = 'Octubre' %}    
        {% elseif mes == 11  %}
            {% set mesT = 'Noviembre' %}    
        {% elseif mes == 12  %}
            {% set mesT = 'Diciembre' %}    
        {% endif %}
        {% set titulo1Congresos = homes.NombreBuscaCongreso %}
        {% set titulo2Congresos = homes.Nombre2BuscaCongreso %}
        {% set titulo1Testimonio = homes.NombreTituloTestimonio %}
        {% set titulo2Testimonio = homes.nombre2titulo_testimonio %}
        {% set idHomeGral = homes.id %}
{% endfor %}

